{% extends 'base.html.twig' %}

{% block title %}My Dashboard - BitChest{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar py-3">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('client_dashboard') }}">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_wallet') }}">
                            <i class="bi bi-wallet2"></i> My Wallet
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_cryptocurrencies') }}">
                            <i class="bi bi-currency-bitcoin"></i> Cryptocurrencies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_transactions') }}">
                            <i class="bi bi-clock-history"></i> History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_profile') }}">
                            <i class="bi bi-person"></i> My Profile
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <h1 class="h2 mb-4">Hello, {{ client.firstName }}!</h1>

            <!-- Portfolio Summary -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h6 class="card-title">EUR Balance</h6>
                            <h3 class="mb-0">{{ portfolioSummary.balance|number_format(2) }} EUR</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h6 class="card-title">Crypto Value</h6>
                            <h3 class="mb-0">{{ portfolioSummary.portfolioValue|number_format(2) }} EUR</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card {{ portfolioSummary.profitLoss >= 0 ? 'bg-info' : 'bg-danger' }} text-white">
                        <div class="card-body">
                            <h6 class="card-title">Profit/Loss</h6>
                            <h3 class="mb-0">{{ portfolioSummary.profitLoss|number_format(2) }} EUR</h3>
                            <small>({{ portfolioSummary.profitLossPercentage }}%)</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark">
                        <div class="card-body">
                            <h6 class="card-title">Total Value</h6>
                            <h3 class="mb-0">{{ portfolioSummary.netWorth|number_format(2) }} EUR</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Holdings -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-pie-chart"></i> My Cryptos</h5>
                            <a href="{{ path('client_wallet') }}" class="btn btn-sm btn-outline-primary">View all</a>
                        </div>
                        <div class="card-body">
                            {% if portfolioSummary.holdings|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Crypto</th>
                                                <th>Quantity</th>
                                                <th>Value</th>
                                                <th>+/-</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for holding in portfolioSummary.holdings %}
                                                <tr>
                                                    <td><strong>{{ holding.cryptocurrency.symbol }}</strong></td>
                                                    <td>{{ holding.quantity|number_format(4) }}</td>
                                                    <td>{{ holding.totalValue|number_format(2) }} EUR</td>
                                                    <td class="{{ holding.profitLoss >= 0 ? 'text-success' : 'text-danger' }}">
                                                        {{ holding.profitLossPercentage }}%
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">You don't own any cryptocurrency yet.</p>
                                <a href="{{ path('client_cryptocurrencies') }}" class="btn btn-primary mt-3">
                                    <i class="bi bi-cart-plus"></i> Buy my first crypto
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Available Cryptos -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-currency-bitcoin"></i> Cryptocurrencies</h5>
                            <a href="{{ path('client_cryptocurrencies') }}" class="btn btn-sm btn-outline-primary">View all</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Crypto</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for crypto in cryptocurrencies|slice(0, 5) %}
                                            <tr>
                                                <td>
                                                    <strong>{{ crypto.symbol }}</strong>
                                                    <small class="text-muted d-block">{{ crypto.name }}</small>
                                                </td>
                                                <td>{{ crypto.currentPrice|number_format(2) }} EUR</td>
                                                <td>
                                                    <a href="{{ path('client_buy', {id: crypto.id}) }}"
                                                       class="btn btn-sm btn-success">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
