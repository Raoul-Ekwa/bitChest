{% extends 'base.html.twig' %}

{% block title %}Sell {{ crypto.name }} - BitChest{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar py-3">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_dashboard') }}">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('client_wallet') }}">
                            <i class="bi bi-wallet2"></i> My Wallet
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_cryptocurrencies') }}">
                            <i class="bi bi-currency-bitcoin"></i> Cryptocurrencies
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-cart-dash"></i> Sell {{ crypto.name }} ({{ crypto.symbol }})
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="text-muted">Current Price</h6>
                                            <h3 class="text-primary">{{ crypto.currentPrice|number_format(2) }} EUR</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="text-muted">You Own</h6>
                                            <h3 class="text-info">{{ holding.quantity|number_format(8) }} {{ crypto.symbol }}</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <h6 class="text-muted">Total Value</h6>
                                            <h3 class="text-success">{{ holding.totalValue|number_format(2) }} EUR</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-{{ holding.profitLoss >= 0 ? 'success' : 'warning' }}">
                                <strong>Current {{ holding.profitLoss >= 0 ? 'Profit' : 'Loss' }}:</strong>
                                {{ holding.profitLoss|number_format(2) }} EUR ({{ holding.profitLossPercentage }}%)
                            </div>

                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_label(form.quantity) }}
                                    {{ form_widget(form.quantity, {'attr': {'class': 'form-control form-control-lg', 'id': 'quantity'}}) }}
                                    {{ form_errors(form.quantity) }}
                                    <div class="form-text">
                                        <a href="#" id="sellAll">Sell all ({{ holding.quantity|number_format(8) }} {{ crypto.symbol }})</a>
                                    </div>
                                </div>

                                <div class="card bg-light mb-4">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <span>Amount to receive:</span>
                                            <strong id="totalAmount" class="text-success">0.00 EUR</strong>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-danger btn-lg flex-grow-1">
                                        <i class="bi bi-check-lg"></i> Confirm Sale
                                    </button>
                                    <a href="{{ path('client_wallet') }}" class="btn btn-secondary btn-lg">
                                        Cancel
                                    </a>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    const price = {{ crypto.currentPrice }};
    const maxQuantity = {{ holding.quantity }};
    const quantityInput = document.getElementById('quantity');
    const totalAmountEl = document.getElementById('totalAmount');
    const sellAllLink = document.getElementById('sellAll');

    quantityInput.addEventListener('input', function() {
        const quantity = parseFloat(this.value) || 0;
        const total = quantity * price;
        totalAmountEl.textContent = total.toFixed(2) + ' EUR';
    });

    sellAllLink.addEventListener('click', function(e) {
        e.preventDefault();
        quantityInput.value = maxQuantity;
        const total = maxQuantity * price;
        totalAmountEl.textContent = total.toFixed(2) + ' EUR';
    });
</script>
{% endblock %}
