{% extends 'base.html.twig' %}

{% block title %}Cryptocurrencies - BitChest{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar py-3">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_dashboard') }}">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_wallet') }}">
                            <i class="bi bi-wallet2"></i> My Wallet
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('client_cryptocurrencies') }}">
                            <i class="bi bi-currency-bitcoin"></i> Cryptocurrencies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('client_transactions') }}">
                            <i class="bi bi-clock-history"></i> History
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <h1 class="h2 mb-4">Available Cryptocurrencies</h1>

            <div class="row">
                {% for crypto in cryptocurrencies %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-0">{{ crypto.symbol }}</h5>
                                        <small class="text-muted">{{ crypto.name }}</small>
                                    </div>
                                    <span class="badge bg-primary fs-6">
                                        {{ crypto.currentPrice|number_format(2) }} EUR
                                    </span>
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="{{ path('client_cryptocurrency_show', {id: crypto.id}) }}"
                                       class="btn btn-outline-primary">
                                        <i class="bi bi-graph-up"></i> Details
                                    </a>
                                    <a href="{{ path('client_buy', {id: crypto.id}) }}"
                                       class="btn btn-success">
                                        <i class="bi bi-cart-plus"></i> Buy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </main>
    </div>
</div>
{% endblock %}
