{% extends 'base.html.twig' %}

{% block title %}New Cryptocurrency - BitChest{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar py-3">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_clients') }}">
                            <i class="bi bi-people"></i> Clients
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('admin_cryptocurrencies') }}">
                            <i class="bi bi-currency-bitcoin"></i> Cryptocurrencies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_profile') }}">
                            <i class="bi bi-person"></i> My Profile
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">New Cryptocurrency</h1>
                <a href="{{ path('admin_cryptocurrencies') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.symbol) }}
                                {{ form_widget(form.symbol, {'attr': {'class': 'form-control', 'placeholder': 'e.g. BTC'}}) }}
                                {{ form_errors(form.symbol) }}
                                <div class="form-text">Will be stored in uppercase.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'e.g. Bitcoin'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.currentPrice) }}
                                {{ form_widget(form.currentPrice, {'attr': {'class': 'form-control', 'placeholder': 'e.g. 45000.00'}}) }}
                                {{ form_errors(form.currentPrice) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.image) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'https://...'}}) }}
                                {{ form_errors(form.image) }}
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Create Cryptocurrency
                            </button>
                            <a href="{{ path('admin_cryptocurrencies') }}" class="btn btn-secondary">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
