{% extends 'base.html.twig' %}

{% block title %}{{ crypto.name }} - BitChest{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar py-3">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_clients') }}">
                            <i class="bi bi-people"></i> Clients
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('admin_cryptocurrencies') }}">
                            <i class="bi bi-currency-bitcoin"></i> Cryptocurrencies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_profile') }}">
                            <i class="bi bi-person"></i> My Profile
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">{{ crypto.name }} ({{ crypto.symbol }})</h1>
                <div>
                    <a href="{{ path('admin_cryptocurrencies_edit', {id: crypto.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="{{ path('admin_cryptocurrencies') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Crypto Info -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-currency-bitcoin"></i> Details</h5>
                        </div>
                        <div class="card-body">
                            {% if crypto.image %}
                                <div class="mb-3 text-center">
                                    <img src="{{ crypto.image }}" alt="{{ crypto.name }}" class="img-fluid" style="max-height: 80px;">
                                </div>
                            {% endif %}
                            <table class="table table-borderless">
                                <tr>
                                    <th>Symbol:</th>
                                    <td><strong>{{ crypto.symbol }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Name:</th>
                                    <td>{{ crypto.name }}</td>
                                </tr>
                                <tr>
                                    <th>Current Price:</th>
                                    <td>{{ crypto.currentPrice|number_format(8) }} EUR</td>
                                </tr>
                                <tr>
                                    <th>Added:</th>
                                    <td>{{ crypto.createdAt|date('Y-m-d H:i') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Stats -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th>Price Quotes:</th>
                                    <td>{{ crypto.quotes|length }}</td>
                                </tr>
                                <tr>
                                    <th>Active Holdings:</th>
                                    <td>{{ crypto.holdings|length }}</td>
                                </tr>
                                <tr>
                                    <th>Transactions:</th>
                                    <td>{{ crypto.transactions|length }}</td>
                                </tr>
                            </table>

                            {% if crypto.holdings|length == 0 and crypto.transactions|length == 0 %}
                                <hr>
                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i> Delete Cryptocurrency
                                </button>
                            {% else %}
                                <div class="alert alert-warning mb-0 mt-2">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Cannot delete: this cryptocurrency has active holdings or transactions.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong>{{ crypto.name }} ({{ crypto.symbol }})</strong>?
                This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="{{ path('admin_cryptocurrencies_delete', {id: crypto.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ crypto.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
